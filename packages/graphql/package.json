{
  "name": "@animavita/graphql",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.prod.js --display-error-details --display-modules",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules src/index.local.ts",
    "prepare:build": "scripts/prepareBuild.sh",
    "start": "webpack --config webpack.dev.js --progress",
    "sam": "yarn copy:env:to:build && concurrently \"webpack --config webpack.prod.js --watch\" \"sam local start-api --port 5000 --template aws/prod.yml\"",
    "start:infra": "docker-compose up -d",
    "test": "jest",
    "test:watch": "jest --watch",
    "update:schema": "ts-node-dev ./scripts/updateSchema.ts"
  },
  "dependencies": {
    "@entria/graphql-mongoose-loader": "^4.3.0",
    "@koa/router": "^8.0.6",
    "awilix": "^4.3.4",
    "aws-sdk": "^2.614.0",
    "aws-serverless-express": "^3.3.6",
    "axios": "^0.21.1",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "env-var": "^7.0.0",
    "graphql": "^14.6.0",
    "graphql-playground-middleware": "^1.1.2",
    "graphql-relay": "^0.6.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-cors": "^0.0.16",
    "koa-graphql": "^0.8.0",
    "koa-logger": "^3.2.1",
    "mongoose": "^5.8.11",
    "node-base64-image": "^2.0.1",
    "supertest": "^6.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/aws-sdk": "^2.7.0",
    "@types/dotenv-safe": "^8.1.0",
    "@types/graphql-relay": "^0.4.11",
    "@types/koa": "^2.11.0",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-convert": "^1.2.3",
    "@types/koa-cors": "^0.0.0",
    "@types/koa-graphql": "^0.8.3",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-multer": "^1.0.0",
    "@types/koa__router": "^8.0.2",
    "@types/mongoose": "^5.7.0",
    "@types/node": "^13.7.1",
    "@types/supertest": "^2.0.11",
    "axios-mock-adapter": "^1.19.0",
    "babel-loader": "^8.0.6",
    "jest": "^27.0.4",
    "jest-environment-node": "^27.0.3",
    "mongodb-memory-server": "^6.9.6",
    "reload-server-webpack-plugin": "^1.0.1",
    "ts-jest": "^27.0.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.3.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  }
}
